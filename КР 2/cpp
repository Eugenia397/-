#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

// Функция для решения задачи о рюкзаке методом жадного выбора
int knapsackGreedy(const vector<int>& weights, const vector<int>& values, int W) {
    vector<pair<double, int>> items(weights.size()); // пара: удельная стоимость, индекс предмета
    
    // Заполняем вектор пар (удельная стоимость, индекс элемента)
    for(int i = 0; i < weights.size(); i++) {
        items[i].first = static_cast<double>(values[i]) / weights[i]; // вычисляем удельную стоимость
        items[i].second = i;                                          // запоминаем исходный индекс
    }
    
    // Сортируем предметы по убыванию удельной стоимости
    sort(items.begin(), items.end(), [](const pair<double,int>& a, const pair<double,int>& b){
        return a.first > b.first;
    });
    
    int totalValue = 0;      // итоговая сумма ценности
    int totalWeight = 0;     // общий набранный вес
    
    // Перебираем отсортированные предметы
    for(auto& item : items) {
        if(totalWeight + weights[item.second] <= W) {   // проверяем, помещается ли предмет целиком
            totalValue += values[item.second];          // добавляем полную ценность предмета
            totalWeight += weights[item.second];        // увеличиваем суммарный вес
        }
    }
    
    return totalValue;
}

int main() {
    int n, W;              // количество предметов и емкость рюкзака
    cout << "Количество предметов: ";
    cin >> n;
    cout << "Емкость рюкзака: ";
    cin >> W;
    
    vector<int> weights(n);
    vector<int> values(n);
    
    // Чтение весов и ценностей предметов
    cout << "Вес каждого предмета:\n";
    for(int i = 0; i < n; i++) {
        cin >> weights[i];
    }
    
    cout << "Стоимость каждого предмета:\n";
    for(int i = 0; i < n; i++) {
        cin >> values[i];
    }
    cout<<endl;
    int result = knapsackGreedy(weights, values, W);
    cout << "Максимальная возможная ценность: " << result << endl;
    
    return 0;
}


**Входные данные**

Количество предметов: 4
Емкость рюкзака: 50
Вес каждого предмета:
10
20
30
40
Стоимость каждого предмета:
60
100
120
80


**Выходные данные**

Максимальная возможная ценность: 160
